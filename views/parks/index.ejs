<% layout('/layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1>All Places</h1>
    <% for(let park of parks){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(park.image.length) {%>
                        <img src="<%=park.image[0].url%>" alt="" class="img-fluid">
                        <% } else {%>
                            <img src="" alt="" class="img-fluid">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title">
                            <%=park.title%>
                        </h3>
                        <h5 class="text-muted card-text">
                            <%=park.location %>
                        </h5>
                        <p class="card-text">
                            <%=park.description%>
                        </p>
                        <a href="/parks/<%=park.id%>" class="btn btn-primary">View <%=park.title %> </a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const parks = { features: <% -JSON.stringify(parks) %>};
            </script>
            <script src="/javascripts/clusterMap.js"></script>